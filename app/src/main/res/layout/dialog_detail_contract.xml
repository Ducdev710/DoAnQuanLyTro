<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/PADDING_SIZE_DEFAULT">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/PADDING_SIZE_SMALL"
        android:text="Chi tiết hợp đồng"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/TEXT_SIZE_LARGE"
        android:textColor="@color/white"
        android:background="@color/primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/PADDING_SIZE_LARGE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=""/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_craete_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="32/7/2023"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng:    "/>

            <TextView
                android:id="@+id/tv_name_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="A5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chủ hợp đồng:    "/>

            <TextView
                android:id="@+id/tv_contract_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nguyễn Văn A"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/PADDING_SIZE_SMALL"
        android:background="@drawable/background_border_radius_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:text="Thông tin hợp đồng"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="Thông tin chi tiết về hợp đồng của phòng"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/PADDING_SIZE_SMALL">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Ngày bắt đầu ở"/>

                <EditText
                    android:id="@+id/tv_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:text="20/7/2031"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/PADDING_SIZE_SMALL">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Ngày kết thúc"/>

                <EditText
                    android:id="@+id/tv_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:text="20/7/2031"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Thời hạn: 5 tháng"/>

            <EditText
                android:id="@+id/tv_deposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="14sp"
                android:hint="Tiền cọc"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:text="Tiền cọc: 6 000 000"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:text="Ghi chú:"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_note"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"
            style="@style/InputLayoutStyle1"
            app:boxBackgroundColor="@color/background1"
            android:layout_weight="4"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                tools:ignore="SpUsage" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Termination Details Section - Visible only when contract is terminated -->
    <LinearLayout
        android:id="@+id/layout_termination_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/PADDING_SIZE_SMALL"
        android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
        android:visibility="gone"
        android:background="@drawable/background_border_radius_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:text="Thông tin kết thúc hợp đồng"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lý do kết thúc:"/>

        <TextView
            android:id="@+id/tv_termination_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/PADDING_SIZE_SMALL"
            android:text=""
            tools:text="Hết hạn hợp đồng"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Số tiền hoàn trả:"/>

        <TextView
            android:id="@+id/tv_refund_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/PADDING_SIZE_SMALL"
            android:text=""
            tools:text="4 500 000 VND"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lý do khấu trừ:"/>

        <TextView
            android:id="@+id/tv_deduction_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            tools:text="Sửa chữa tủ lạnh bị hư"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_end_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/black"
            android:buttonTint="@color/check_box_color_selector"
            android:text="Hết hợp đồng"/>

        <Space
            android:layout_width="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/black"
            android:buttonTint="@color/check_box_color_selector"
            android:text="Hết hiệu lực"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_marginEnd="16dp"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/primary"
            android:background="@drawable/background_button"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_end"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/primary"
            android:background="@drawable/background_button"/>
    </LinearLayout>
</LinearLayout>